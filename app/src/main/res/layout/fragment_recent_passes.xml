<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.RecentPassesFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/tvlike"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/onesidedrawableround"
            android:fontFamily="@font/interregular"
            android:gravity="center"
            android:padding="5dp"
            android:text="Recent liked"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvsuperlike"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/strokerightsideroundeddrawable"
            android:fontFamily="@font/interregular"
            android:gravity="center"
            android:padding="5dp"
            android:text="Recent declined"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/interregular"
        android:gravity="center"
        android:text="Upgrade to marier see people who"
        android:textColor="#424242"
        android:textSize="14dp" />

    <GridView
        android:id="@+id/likesgridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:numColumns="2"
        android:paddingLeft="-8dp"
        android:paddingRight="-8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toproundedcorner"
        android:backgroundTint="#E3E0F5"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/interbold"
            android:text="Discover members you recently passed"
            android:textColor="#424242"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/lessroundcornerstroke2"
            android:backgroundTint="@color/pink"
            android:fontFamily="@font/intermedium"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:text="Buy coin"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>