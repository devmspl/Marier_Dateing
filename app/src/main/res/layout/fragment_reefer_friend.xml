<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.ReeferFriendFragment"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:background="@drawable/curvsss">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/invitevector"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            app:tint="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share the love by inviting your friends"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/interregular"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share your code"
            android:textColor="@color/pink"
            android:textSize="14sp"
            android:fontFamily="@font/interregular"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/linshare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="vho WIH"
                android:gravity="center"
                android:textSize="14sp"
                android:padding="5dp"
                android:textColor="@color/orange"
                android:fontFamily="@font/roboto_bold"
                android:backgroundTint="@color/white"
                android:background="@drawable/roundcornerstrokezero"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_insert_link_24"
                android:background="@drawable/roundcornerstrokezero"
                android:backgroundTint="@color/pink"
                android:padding="3dp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_weight="0.5">
        <TextView
            android:id="@+id/tvclose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="90dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/roundcorner"
            android:backgroundTint="@color/pink"
            android:fontFamily="@font/interregular"
            android:gravity="center"
            android:padding="15dp"
            android:text="CLOSE"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>